#include<stdio.h>

int main()
{
  int x;
  int y;
  int z;

  printf("Enter the value of x : ");
  scanf("%d", &x);

  printf("Enter the value of y : ");
  scanf("%d", &y);

  printf("Enter the value of z : ");
  scanf("%d", &z);

  if(x <= y && x<=z)
  {
   printf("%d,x is the smallest.\n",x);
    }
  else if(y <=x && y <= z)
  {
   printf("%d,y is the smallest.\n",y);
   }
   else
   {
   printf("%d,z is the smallest.\n",z);
   }   
   if(x >= y && x >= z)
{
printf("%d,x is the largest value.\n",x);
}
else if(y >= x && y >= z)
{
 printf("%d,y is the largest value.\n",y);
}
else
{
printf("%d,z is the largest value.\n",z);
}
 return 0;
}
